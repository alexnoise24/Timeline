[Unit]
Description=Timeline Wedding App Backend Server
Documentation=https://github.com/your-repo/timeline
After=network.target mongodb.service

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/Timeline/backend
Environment=NODE_ENV=production
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=timeline-server

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
